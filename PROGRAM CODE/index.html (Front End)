<body>
  <div class="container">
    <h1>Whiteboard Content Digitalizer</h1>
    <form id="upload-form" action="/upload" method="post" enctype="multipart/form-data">
      <div class="drop-area" id="drop-area">
        <p>Drag & Drop file here<br>or<br>Click to select a file</p>
        <input type="file" name="file" id="file-input" accept="image/*" style="display:none;" required>
      </div>
      <div id="preview"></div>
      <button type="submit">Upload & Convert</button>
      <button type="button" id="reset-btn">Reset</button>
    </form>
    {% if pdf_file %}
      <a href="/download/{{ pdf_file }}"><button type="button">Download PDF</button></a>
      <button type="button" id="toggle-info-btn">Image Info</button>
    {% endif %}
  </div>
  {% if previews %}
  <div class="side-panel" id="side-panel">
    <h2>Image Info</h2>
    {% for name, path in previews.items() %}
      <p><strong>{{ name|capitalize }}</strong></p>
      <img src="/{{ path }}" alt="{{ name }}">
    {% endfor %}
  </div>
  {% endif %}
  <script>
    const dropArea = document.getElementById('drop-area');
    const fileInput = document.getElementById('file-input');
    const preview = document.getElementById('preview');
    const resetBtn = document.getElementById('reset-btn');
    const toggleInfoBtn = document.getElementById('toggle-info-btn');
    const sidePanel = document.getElementById('side-panel');
    dropArea.addEventListener('click', () => fileInput.click());
    dropArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropArea.classList.add('dragover');
    });
    dropArea.addEventListener('dragleave', () => dropArea.classList.remove('dragover'));
    dropArea.addEventListener('drop', (e) => {
      e.preventDefault();
      dropArea.classList.remove('dragover');
      fileInput.files = e.dataTransfer.files;
      showPreview(fileInput.files[0]);
    });
    fileInput.addEventListener('change', () => {
      if (fileInput.files.length > 0) showPreview(fileInput.files[0]);
    });
    resetBtn.addEventListener('click', () => {
      fileInput.value = '';
      preview.innerHTML = '';
    });
    function showPreview(file) {
      if (file && file.type.startsWith('image/')) {
        const reader = new FileReader();
        reader.onload = (e) => {
          preview.innerHTML = `<img src="${e.target.result}">`;
        };
        reader.readAsDataURL(file);
      }
    }
    if (toggleInfoBtn && sidePanel) {
      toggleInfoBtn.addEventListener('click', () => {
        sidePanel.style.display = sidePanel.style.display === "none" ? "block" : "none";
      });
    }
  </script>
</body>
